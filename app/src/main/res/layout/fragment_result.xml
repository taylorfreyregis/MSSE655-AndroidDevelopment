<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taylorcfrey.workouttracker.record.ResultFragment">

    <Button
        android:id="@+id/button_add_result"
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:text="Add Result"/>

    <Button
        android:id="@+id/button_delete_record"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/button_add_result"

        android:text="Delete Record"/>

    <ListView
        android:id="@+id/list_view_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_delete_record"/>

    <!-- graph -->

</RelativeLayout>
