<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taylorcfrey.workouttracker.record.ResultFragment">

    <Button
        android:id="@+id/button_create_record"
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:text="Create Record"/>

    <ListView
        android:id="@+id/list_view_records"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_create_record"/>

</RelativeLayout>
